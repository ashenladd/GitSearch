<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GitSearch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_light</item>
        <item name="colorOnPrimaryContainer">@color/blue_dark</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_light</item>
        <item name="colorOnSecondaryContainer">@color/blue_darker</item>
        <item name="colorTertiary">@color/purple</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/purple_light</item>
        <item name="colorOnTertiaryContainer">@color/purple_dark</item>
    </style>

    <style name="Theme.GitSearch" parent="Base.Theme.GitSearch" />

    <style name="Theme.GitSearch.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorSurface</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>